<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="190dp">
        <android.support.design.widget.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:id="@+id/collapsingToolbar"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:contentScrim="#fff"
            android:layout_height="match_parent">
            <LinearLayout
                app:layout_collapseMode="parallax"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                tools:context=".activity.MyHomePageActivity">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:background="@mipmap/bj"
                android:orientation="vertical"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/statusbar_view_height" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/iv_back"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:src="@mipmap/returnicon" />
                    <ImageView
                        android:id="@+id/iv_my_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="right"
                        android:layout_marginRight="6dp"
                        android:src="@mipmap/code" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:layout_marginTop="26dp"
                    android:gravity="center_vertical">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/cv_my_icon"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@mipmap/touxiang" />

                    <TextView
                        android:id="@+id/tv_my_nickname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="10dp"
                        android:layout_toRightOf="@id/cv_my_icon"
                        android:text="丿智障斌峰丶"
                        android:textColor="#ffffffff"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tv_my_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_my_nickname"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@id/cv_my_icon"
                        android:text="千艺号：1234567"
                        android:textColor="#ffffffff"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_update_data"
                        android:layout_width="84dp"
                        android:layout_height="29dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/shape_update_data"
                        android:gravity="center"
                        android:text="修改资料"
                        android:textColor="#3DB2A3"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_my_signature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:text="你猜我个性签名想写啥你猜我个性签名想写啥"
                    android:textColor="#fffefe"
                    android:textSize="11sp" />
            </LinearLayout>


        </LinearLayout>

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                app:contentInsetStart="0dp"
                android:elevation="0dp"
                app:layout_collapseMode="pin"
                android:layout_width="match_parent"
                android:visibility="invisible"
                android:minHeight="?attr/actionBarSize"
                android:layout_height="80dp">
                <RelativeLayout
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <View
                        android:id="@+id/v_3"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/statusbar_view_height" />
                    <ImageView
                        android:id="@+id/iv_back2"
                        android:layout_below="@id/v_3"
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/returnicon1"/>
                    <TextView
                        android:id="@+id/tv_name2"
                        android:layout_below="@id/v_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:textColor="#1A1A1A"
                        android:textStyle="bold"
                        android:text="-"
                        android:textSize="18sp"/>

                    <ImageView
                        android:id="@+id/iv_code_2"
                        android:layout_below="@id/v_3"
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/code1" />
                    <ImageView
                        android:id="@+id/iv_update"
                        android:layout_below="@id/v_3"
                        android:layout_marginRight="16dp"
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        android:layout_toLeftOf="@id/iv_code_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/changedata"/>
                </RelativeLayout>
            </android.support.v7.widget.Toolbar>
        </android.support.design.widget.CollapsingToolbarLayout>
        
    </android.support.design.widget.AppBarLayout>


    <android.support.v4.widget.NestedScrollView
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context=".activity.MyHomePageActivity">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:layout_height="50dp">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/tv_production"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="作品"
                            android:textColor="#b31a1a1a"
                            android:textSize="16sp" />
                        <View
                            android:id="@+id/v_production"
                            android:visibility="gone"
                            android:layout_width="38dp"
                            android:layout_height="5dp"
                            android:shadowDx="0"
                            android:shadowDy="2"
                            android:shadowColor="#8090f0a9"
                            android:layout_gravity="center"
                            android:background="@drawable/shape_indicator" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/tv_collect"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="收藏"
                            android:textColor="#1a1a1a"
                            android:textSize="20sp"
                            android:textStyle="bold" />
                        <View
                            android:id="@+id/v_collect"
                            android:layout_width="38dp"
                            android:layout_height="5dp"
                            android:shadowDx="0"
                            android:shadowDy="2"
                            android:shadowColor="#8090f0a9"
                            android:layout_gravity="center"
                            android:background="@drawable/shape_indicator" />
                    </LinearLayout>


                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/tv_like"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="赞过"
                            android:textColor="#b31a1a1a"
                            android:textSize="16sp" />
                        <View
                            android:id="@+id/v_like"
                            android:visibility="gone"
                            android:layout_width="38dp"
                            android:layout_height="5dp"
                            android:shadowDx="0"
                            android:shadowDy="2"
                            android:shadowColor="#8090f0a9"
                            android:layout_gravity="center"
                            android:background="@drawable/shape_indicator" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <android.support.v4.view.ViewPager
                android:background="#f2f2f2"
                android:id="@+id/vp_home_page"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>


</android.support.design.widget.CoordinatorLayout>