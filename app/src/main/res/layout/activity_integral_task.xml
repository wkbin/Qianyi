<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    tools:context=".activity.IntegralTaskActivity">
    <RelativeLayout
        android:background="@color/actionBar"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
        <ImageView
            android:id="@+id/action_bar_iv_left"
            android:layout_marginLeft="20dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/fanhui2"/>
        <TextView
            android:id="@+id/action_bar_text"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="18sp"
            android:textColor="#1a1a1a"
            android:text="积分任务"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/action_bar_iv_right"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="#1A1A1A"
            android:textSize="16sp"
            android:gravity="center"
            android:text="我的积分"
            android:layout_marginRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="30dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@mipmap/layer">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:textColor="#ffffff"
            android:textSize="13sp"
            android:layout_centerHorizontal="true"
            android:text="今日获得积分"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_sign_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_marginBottom="35dp"
                android:textColor="#ffffff"
                android:text="0"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_marginBottom="35dp"
                android:textColor="#ffffff"
                android:text="/80"/>
        </LinearLayout>


    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#1a1a1a"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:text="- 做以下每日任务 赚取积分 -"/>

    <LinearLayout
        android:layout_marginTop="28dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp">
            <ImageView
                android:id="@+id/iv_sign_in"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:src="@mipmap/sign"/>
            <TextView
                android:id="@+id/tv_sign_in"
                android:layout_marginTop="3dp"
                android:layout_toRightOf="@id/iv_sign_in"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#1a1a1a"
                android:textSize="14sp"
                android:text="每日签到+10积分"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#999999"
                android:shadowDx="0"
                android:shadowDy="0"
                android:layout_toRightOf="@id/iv_sign_in"
                android:layout_marginLeft="10dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="4dp"
                android:text="连续签到天数越多，积分越高"/>
            <TextView
                android:id="@+id/tv_sign"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="64dp"
                android:layout_height="33dp"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:text="签到"
                android:shadowColor="#9991e573"
                android:background="@drawable/shape_integral_task"/>
            <ImageView
                android:id="@+id/iv_sign"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/complete"/>
        </RelativeLayout>

        <View
            android:layout_marginTop="18dp"
            android:layout_width="match_parent"
            android:background="#F2F2F2"
            android:layout_height="1dp"/>

        <RelativeLayout
            android:layout_marginTop="18dp"
            android:layout_width="match_parent"
            android:layout_height="44dp">
            <ImageView
                android:id="@+id/iv_see_video"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:src="@mipmap/video"/>
            <TextView
                android:layout_marginTop="3dp"
                android:layout_toRightOf="@id/iv_see_video"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#1a1a1a"
                android:textSize="14sp"
                android:text="看视频+20积分"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#999999"
                android:layout_toRightOf="@id/iv_see_video"
                android:layout_marginLeft="10dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="4dp"
                android:text="每日累计看15分钟视频"/>
            <TextView
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="64dp"
                android:layout_height="33dp"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:text="看视频"
                android:shadowColor="#9991e573"
                android:background="@drawable/shape_integral_task"/>
        </RelativeLayout>

        <View
            android:layout_marginTop="18dp"
            android:layout_width="match_parent"
            android:background="#F2F2F2"
            android:layout_height="1dp"/>

        <RelativeLayout
            android:layout_marginTop="18dp"
            android:layout_width="match_parent"
            android:layout_height="44dp">
            <ImageView
                android:id="@+id/iv_go_shopping"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:src="@mipmap/malltobuy"/>
            <TextView
                android:layout_marginTop="3dp"
                android:layout_toRightOf="@id/iv_go_shopping"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#1a1a1a"
                android:textSize="14sp"
                android:text="商城购买+20积分"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#999999"
                android:layout_toRightOf="@id/iv_go_shopping"
                android:layout_marginLeft="10dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="4dp"
                android:text="每日商城购买满50元商品"/>
            <TextView
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="64dp"
                android:layout_height="33dp"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:text="去商城"
                android:shadowColor="#9991e573"
                android:background="@drawable/shape_integral_task"/>
        </RelativeLayout>

        <View
            android:layout_marginTop="18dp"
            android:layout_width="match_parent"
            android:background="#F2F2F2"
            android:layout_height="1dp"/>

        <RelativeLayout
            android:layout_marginTop="18dp"
            android:layout_width="match_parent"
            android:layout_height="44dp">
            <ImageView
                android:id="@+id/iv_share"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:src="@mipmap/shareto"/>
            <TextView
                android:layout_marginTop="3dp"
                android:layout_toRightOf="@id/iv_share"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#1a1a1a"
                android:textSize="14sp"
                android:text="分享给好友+20积分"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#999999"
                android:layout_toRightOf="@id/iv_share"
                android:layout_marginLeft="10dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="4dp"
                android:text="每天分享一次给好友"/>
            <TextView
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="64dp"
                android:layout_height="33dp"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:text="去分享"
                android:shadowColor="#9991e573"
                android:background="@drawable/shape_integral_task"/>
        </RelativeLayout>


        <View
            android:layout_marginTop="18dp"
            android:layout_width="match_parent"
            android:background="#F2F2F2"
            android:layout_height="1dp"/>

        <RelativeLayout
            android:layout_marginTop="18dp"
            android:layout_width="match_parent"
            android:layout_height="44dp">
            <ImageView
                android:id="@+id/iv_mobile"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:src="@mipmap/mobilephone"/>
            <TextView
                android:layout_marginTop="3dp"
                android:layout_toRightOf="@id/iv_mobile"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#1a1a1a"
                android:textSize="14sp"
                android:text="绑定手机+100积分"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#999999"
                android:layout_toRightOf="@id/iv_mobile"
                android:layout_marginLeft="10dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="4dp"
                android:text="绑定手机号"/>
            <TextView
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="64dp"
                android:layout_height="33dp"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:text="去绑定"
                android:shadowColor="#9991e573"
                android:background="@drawable/shape_integral_task"/>
        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <View
                android:layout_width="18dp"
                android:layout_height="1dp"
                android:layout_marginRight="10dp"
                android:background="#F2F2F2"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#999999"
                android:textSize="11sp"
                android:text="还不了解积分?"/>
            <TextView
                android:id="@+id/tv_integral_description"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#3DB2A3"
                android:textSize="11sp"
                android:text="积分说明"/>
            <View
                android:layout_marginLeft="10dp"
                android:layout_width="18dp"
                android:layout_height="1dp"
                android:background="#F2F2F2"/>
        </LinearLayout>

    </RelativeLayout>
    
</LinearLayout>