<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/set_pwd_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/statusbar_view_height" />
    <ImageView
        android:id="@+id/set_pwd_back"
        android:layout_below="@id/set_pwd_view"
        android:layout_margin="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/fanhui2"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_margin="45dp"
        android:layout_below="@id/set_pwd_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#1a1a1a"
            android:textStyle="bold"
            android:textSize="30sp"
            android:text="找回密码"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/et_get_phone"
                android:inputType="number"
                android:textColorHint="#B3B3B3"
                android:textSize="16sp"
                android:maxLength="11"
                android:layout_centerVertical="true"
                android:maxLines="1"
                android:singleLine="true"
                android:hint="输入您的手机号"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/iv_clear_phone"
                android:visibility="gone"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/qingchu2"/>
            <View
                android:layout_marginTop="14dp"
                android:layout_below="@id/et_get_phone"
                android:background="#D9D9D9"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/et_get_code"
                android:maxLength="4"
                android:textColorHint="#B3B3B3"
                android:inputType="number"
                android:layout_centerVertical="true"
                android:maxLines="1"
                android:singleLine="true"
                android:textSize="16sp"
                android:hint="请输入验证码"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/btn_get_code"
                android:layout_alignParentRight="true"
                android:layout_width="76dp"
                android:layout_centerVertical="true"
                android:layout_height="23dp"
                android:text="获取验证码"
                android:textColor="#666666"
                android:textSize="12sp"
                android:background="@drawable/shape_get_code_on"/>
            <View
                android:layout_marginTop="14dp"
                android:layout_below="@id/et_get_code"
                android:background="#D9D9D9"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
        </RelativeLayout>
        <Button
            android:clickable="false"
            android:id="@+id/btn_next"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_settings_pwd_off"
            android:textColor="#999999"
            android:textSize="18sp"
            android:text="下一步"
            android:layout_width="match_parent"
            android:layout_height="50dp" />
    </LinearLayout>


</RelativeLayout>
