<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@mipmap/beijing"
    android:layout_height="match_parent">
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/statusbar_view_height" />
   <include layout="@layout/login_title"/>


    <LinearLayout
        android:visibility="visible"
        android:id="@+id/li_get_code"
        android:layout_marginTop="56dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/et_quick_login_phone"
            android:textColor="@color/qy_white"
            android:maxLines="1"
            android:maxLength="11"
            android:singleLine="true"
            android:gravity="center"
            android:textColorHint="#66ffffff"
            android:textSize="16sp"
            android:background="@null"
            android:hint="请输入手机号码"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <View
            android:layout_marginTop="14dp"
            android:layout_marginLeft="48dp"
            android:layout_marginRight="48dp"
            android:background="#33ffffff"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
        <Button

            android:id="@+id/btn_get_verification_code"
            android:layout_marginTop="18dp"
            android:gravity="center"
            android:text="获取验证码"
            android:textColor="@color/qy_white"
            android:background="@drawable/shape_login_button_off"
            android:textSize="18sp"
            android:layout_marginLeft="38dp"
            android:layout_marginRight="38dp"
            android:layout_width="match_parent"
            android:layout_height="50dp" />
        <TextView
            android:id="@+id/tv_password_to_login"
            android:textColor="@color/qy_white"
            android:layout_marginTop="28dp"
            android:textSize="18sp"
            android:text="密码登录"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/li_verification_code_login"
        android:visibility="gone"
        android:layout_marginTop="56dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_show_phone_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#66FEFEFE"
                android:text="-"/>
            <Button
                android:id="@+id/btn_to_obtain"
                android:layout_marginLeft="6dp"
                android:background="@drawable/shape_retrieve_captcha_on"
                android:text="重新获取"
                android:textColor="#1a1a1a"
                android:textSize="12sp"
                android:layout_width="60dp"
                android:layout_height="20dp" />
        </LinearLayout>

        <EditText
            android:id="@+id/et_verification_code"
            android:layout_marginTop="28dp"
            android:textColor="@color/qy_white"
            android:maxLines="1"
            android:singleLine="true"
            android:maxLength="4"
            android:gravity="center"
            android:textColorHint="#66ffffff"
            android:textSize="16sp"
            android:background="@null"
            android:hint="请输入验证码"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <View
            android:layout_marginTop="14dp"
            android:layout_marginLeft="48dp"
            android:layout_marginRight="48dp"
            android:background="#33ffffff"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
        <Button
            android:id="@+id/btn_validation"
            android:layout_marginTop="18dp"
            android:text="验证"
            android:textColor="@color/qy_white"
            android:background="@drawable/shape_login_button_off"
            android:textSize="18sp"
            android:layout_marginLeft="38dp"
            android:layout_marginRight="38dp"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/li_password_to_login"
        android:visibility="gone"
        android:layout_marginTop="56dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/et_password_login_phone"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/qy_white"
                android:gravity="center"
                android:textColorHint="#66ffffff"
                android:textSize="16sp"
                android:background="@null"
                android:hint="请输入手机号码"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@id/et_password_login_phone"
                android:layout_alignBottom="@id/et_password_login_phone"
                android:layout_marginRight="65dp"
                android:src="@mipmap/qingchu" />
            <View
                android:layout_below="@id/et_password_login_phone"
                android:layout_marginTop="14dp"
                android:layout_marginLeft="48dp"
                android:layout_marginRight="48dp"
                android:background="#33ffffff"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="18dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/et_password_login_pwd"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/qy_white"
                android:inputType="textPassword"
                android:gravity="center"
                android:textColorHint="#66ffffff"
                android:textSize="16sp"
                android:background="@null"
                android:hint="请输入密码"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@id/et_password_login_pwd"
                android:layout_alignBottom="@id/et_password_login_pwd"
                android:layout_marginRight="94dp"
                android:src="@mipmap/qingchu" />
            <ImageView
                android:layout_marginRight="65dp"
                android:layout_alignEnd="@id/et_password_login_pwd"
                android:layout_alignBottom="@id/et_password_login_pwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/bukekan"/>
            <View
                android:layout_below="@id/et_password_login_pwd"
                android:layout_marginTop="14dp"
                android:layout_marginLeft="48dp"
                android:layout_marginRight="48dp"
                android:background="#33ffffff"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
        </RelativeLayout>
        <Button
            android:id="@+id/btn_password_login"
            android:layout_marginTop="18dp"
            android:text="登录"
            android:textColor="@color/qy_white"
            android:background="@drawable/shape_login_button_off"
            android:textSize="18sp"
            android:layout_marginLeft="38dp"
            android:layout_marginRight="38dp"
            android:layout_width="match_parent"
            android:layout_height="50dp" />
        <LinearLayout
            android:layout_marginTop="28sp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_quick_login"
                android:text="快捷登录"
                android:textColor="@color/qy_white"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:layout_width="1dp"
                android:background="#33ffffff"
                android:layout_height="15dp"/>
            <TextView
                android:id="@+id/tv_forgot_password"
                android:text="忘记密码"
                android:textColor="@color/qy_white"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>



    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <LinearLayout
        android:layout_gravity="bottom"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_marginBottom="35dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/qy_white"
            android:textSize="14sp"
            android:text="第三方登录"/>
        <LinearLayout
            android:layout_marginTop="12dp"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:src="@mipmap/wechat"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:src="@mipmap/qq"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:src="@mipmap/weibo"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="28dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/yigouxuan"/>
            <TextView
                android:layout_marginLeft="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#66ffffff"
                android:text="我已阅读并同意"/>
            <TextView
                android:textColor="@color/qy_white"
                android:text="《千艺用户守则》"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>