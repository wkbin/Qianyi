<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F2F2F2"
    tools:context=".activity.MessageSetActivity">
    <include layout="@layout/action_view_2"/>
    <include layout="@layout/action_bar_2"/>

    <RelativeLayout
        android:layout_marginTop="15dp"
        android:background="#fff"
        android:paddingLeft="21dp"
        android:paddingRight="21dp"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="55dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#1a1a1a"
            android:text="免打扰模式"/>
        <com.suke.widget.SwitchButton
            android:layout_alignParentRight="true"
            app:sb_checked_color="#91E573"
            app:sb_show_indicator="false"
            android:layout_width="44dp"
            android:layout_height="28dp"/>
    </RelativeLayout>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="21dp"
        android:layout_marginRight="21dp"
        android:textColor="#666666"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开启后，在00：00~08：00不接收直播通知和动态发布推送"/>

    <RelativeLayout
        android:layout_marginTop="28dp"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="111dp">
        <RelativeLayout
            android:id="@+id/rl_alerts"
            android:paddingLeft="21dp"
            android:paddingRight="21dp"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="55dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#1a1a1a"
                android:text="聊天消息通知"/>
            <com.suke.widget.SwitchButton
                android:layout_alignParentRight="true"
                app:sb_checked_color="#91E573"
                app:sb_show_indicator="false"
                android:layout_width="44dp"
                android:layout_height="28dp"/>
        </RelativeLayout>
        <View
            android:id="@+id/v_fgx"
            android:layout_below="@id/rl_alerts"
            android:layout_width="match_parent"
            android:layout_marginLeft="15dp"
            android:background="#E6E6E6"
            android:layout_height="1px"/>
        <RelativeLayout
            android:layout_below="@id/v_fgx"
            android:paddingLeft="21dp"
            android:paddingRight="21dp"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="55dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#1a1a1a"
                android:text="聊天通知显示消息详情"/>
            <com.suke.widget.SwitchButton
                android:layout_alignParentRight="true"
                app:sb_checked_color="#91E573"
                app:sb_show_indicator="false"
                android:layout_width="44dp"
                android:layout_height="28dp"/>
        </RelativeLayout>
    </RelativeLayout>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="21dp"
        android:layout_marginRight="21dp"
        android:textColor="#666666"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="关闭后，新聊天通知消息将不显示发送人和内容"/>


    <RelativeLayout
        android:layout_marginTop="28dp"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="111dp">
        <RelativeLayout
            android:id="@+id/rl_voice"
            android:paddingLeft="21dp"
            android:paddingRight="21dp"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="55dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#1a1a1a"
                android:text="声音"/>
            <com.suke.widget.SwitchButton
                android:layout_alignParentRight="true"
                app:sb_checked_color="#91E573"
                app:sb_show_indicator="false"
                android:layout_width="44dp"
                android:layout_height="28dp"/>
        </RelativeLayout>
        <View
            android:id="@+id/v_fgx2"
            android:layout_below="@id/rl_voice"
            android:layout_marginLeft="15dp"
            android:background="#E6E6E6"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
        <RelativeLayout
            android:layout_below="@id/v_fgx2"
            android:paddingLeft="21dp"
            android:paddingRight="21dp"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="55dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#1a1a1a"
                android:text="震动"/>
            <com.suke.widget.SwitchButton
                android:layout_alignParentRight="true"
                app:sb_checked_color="#91E573"
                app:sb_show_indicator="false"
                android:layout_width="44dp"
                android:layout_height="28dp"/>
        </RelativeLayout>
    </RelativeLayout>


</LinearLayout>