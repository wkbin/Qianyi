<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/shape_choose_dialog"
    android:layout_width="300dp"
    android:layout_height="wrap_content">
    <TextView
        android:text="性别"
        android:layout_marginTop="21dp"
        android:textColor="#1a1a1a"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="50dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/rl_nan"
            android:layout_width="0dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iv_nan"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/nandianji"/>
            <TextView
                android:id="@+id/tv_nan"
                android:layout_toRightOf="@id/iv_nan"
                android:layout_marginLeft="22dp"
                android:textSize="16sp"
                android:textColor="#1a1a1a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="男"/>
            <View
                android:layout_marginTop="12dp"
                android:layout_below="@id/iv_nan"
                android:layout_width="match_parent"
                android:background="#d9d9d9"
                android:layout_height="1dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_nv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="15dp"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iv_nv"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/nvweidianji"/>
            <TextView
                android:id="@+id/tv_nv"
                android:layout_toRightOf="@id/iv_nv"
                android:layout_marginLeft="22dp"
                android:textSize="16sp"
                android:textColor="#999999"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="女"/>
            <View
                android:layout_marginTop="12dp"
                android:layout_below="@id/iv_nv"
                android:layout_width="match_parent"
                android:background="#d9d9d9"
                android:layout_height="1dp"/>
        </RelativeLayout>
    </LinearLayout>
    <Button
        android:id="@+id/btn_confirm"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="23dp"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:text="确定"
        android:background="@drawable/shape_settings_pwd_on"
        android:layout_height="45dp" />
    <TextView
        android:id="@+id/tv_quit"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="23dp"
        android:text="取消"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:textColor="#666666"
        android:layout_height="50dp" />
</LinearLayout>
