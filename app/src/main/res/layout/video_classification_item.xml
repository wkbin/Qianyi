<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_marginTop="200dp"
        android:id="@+id/tv_choose_classification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#1A1A1A"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"
        android:textStyle="bold"
        android:text="选择拍摄视频分类"/>

    <LinearLayout
        android:id="@+id/li_tourism"
        android:layout_marginTop="60dp"
        android:layout_below="@id/tv_choose_classification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="76dp"
        android:gravity="center"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/iv_tourism"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/tourismicon"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#1A1A1A"
            android:layout_marginTop="10dp"
            android:text="旅游"/>
    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="60dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@id/tv_choose_classification"
        android:layout_marginRight="76dp"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/iv_food"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/food"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:textColor="#1A1A1A"
            android:text="美食"/>
    </LinearLayout>






        <ImageView
            android:id="@+id/iv_tourism2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginLeft="76dp"
            android:layout_alignParentBottom="true"
            android:src="@mipmap/tourismicon"/>


        <ImageView
            android:id="@+id/iv_food2"
            android:layout_marginRight="76dp"
            android:visibility="gone"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/food"/>

    <ImageView
        android:padding="10dp"
        android:id="@+id/iv_cancel"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="80dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/guanbi01"/>

</RelativeLayout>

